# Production Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# ==================== DATABASE ====================
# Use a connection pooler URL for production
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Optional: Database pool settings
DB_POOL_MAX=20
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECT_TIMEOUT_MS=2000

# ==================== LIGHTNING (LNbits) ====================
# Get these from your LNbits wallet
LNBITS_URL=https://legend.lnbits.com
LNBITS_API_KEY=your_invoice_key_here
LNBITS_ADMIN_KEY=your_admin_key_here
LNBITS_WEBHOOK_SECRET=your_webhook_secret_here

# ==================== APPLICATION ====================
NODE_ENV=production
PORT=4000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://yourdomain.com

# Tournament buy-in amount in sats
BUY_IN_SATS=10000

# ==================== REDIS ====================
# Required for production (session/cache persistence)
REDIS_URL=redis://your-redis-host:6379

# ==================== SECURITY ====================
# Generate with: openssl rand -hex 32
ADMIN_BOOTSTRAP_SECRET=generate_a_secure_random_string_here

# ==================== FRONTEND BUILD ====================
# API URL for frontend to connect to backend
VITE_API_URL=https://api.yourdomain.com

# ==================== OPTIONAL: MONITORING ====================
# Add your monitoring/logging service credentials here
# SENTRY_DSN=
# LOG_LEVEL=info

# ==================== CREDENTIAL ROTATION CHECKLIST ====================
# After initial deployment, rotate ALL of these credentials:
# [ ] DATABASE_URL password
# [ ] LNBITS_API_KEY
# [ ] LNBITS_ADMIN_KEY
# [ ] LNBITS_WEBHOOK_SECRET
# [ ] ADMIN_BOOTSTRAP_SECRET
